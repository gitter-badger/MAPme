<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="labelsAbout">
        <item name="android:textSize">8pt</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="historyRowLabel">
        <item name="android:textSize">6pt</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="labelsNewRecord">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">0.7</item>
    </style>

    <style name="homebuttonLayout">
        <item name="android:paddingTop">20pt</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">10pt</item>
        <item name="android:paddingLeft">10pt</item>
    </style>

    <style name="largeButtons">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">25dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="linLayoutForLabels">
        <item name="android:paddingLeft">10pt</item>
        <item name="android:paddingRight">10pt</item>
        <item name="android:paddingTop">5pt</item>
    </style>

    <style name="mapmeTheme">
        <item name="android:windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
    </style>

    <style name="linLayoutForHistoryDetailsLabels">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">20sp</item>
    </style>




</resources>