<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="labelsAbout">
        <item name="android:textSize">10pt</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="buttonPadding">
        <item name="android:paddingTop">20pt</item>
        <item name="android:layout_width">354dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingRight">10pt</item>
        <item name="android:paddingLeft">10pt</item>
    </style>


    <style name="largeButtons">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">25dp</item>
        <item name="android:padding">5dp</item>
    </style>
</resources>
